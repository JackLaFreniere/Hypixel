# Apache .htaccess configuration for optimal caching

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache Control Headers for Static Assets
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images - 1 year
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # CSS and JavaScript - 1 year
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # JSON files - 1 year
    ExpiresByType application/json "access plus 1 year"
    
    # HTML files - 1 hour (so content updates quickly)
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Cache Control with immutable directive for versioned resources
<IfModule mod_headers.c>
    # For versioned assets (those with ?v= in the URL), set immutable cache
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|webp)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # For HTML files, shorter cache with revalidation
    <FilesMatch "\.html$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # For JSON files (API data), medium cache
    <FilesMatch "\.json$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# Optional: Enable ETag
FileETag MTime Size